--Computer firm base
CREATE DATABASE ComputerFirm;

CREATE TABLE PC (
	code INT
	,model VARCHAR(50)
	,speed SMALLINT
	,hd REAL
	,cd VARCHAR(10)
	,price MONEY
	,PRIMARY KEY (
		code
		,model
		)
	);

CREATE TABLE Printer (
	code INT
	,model VARCHAR(50)
	,color CHAR(1)
	,device_type VARCHAR(10)
	,price MONEY
	,PRIMARY KEY (
		code
		,model
		)
	);

CREATE TABLE Laptop (
	code INT
	,model VARCHAR(50)
	,speed SMALLINT
	,ram SMALLINT
	,hd REAL
	,price MONEY
	,screen TINYINT PRIMARY KEY (
		code
		,model
		)
	);

CREATE TABLE Product (
	maker VARCHAR(10)
	,model VARCHAR(50)
	,device_type VARCHAR(50)
	);
