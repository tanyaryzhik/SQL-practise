<Window x:Class="Task6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="83*"></ColumnDefinition>
            <ColumnDefinition Width="181*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"></RowDefinition>
            <RowDefinition Height="322*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="First"  Margin="10"  Grid.ColumnSpan="2" BorderThickness="5" BorderBrush="DarkBlue"/>
        <Button Content="Second"  Margin="10" Grid.Row="1" BorderThickness="5" BorderBrush="Yellow"/>
        <Button Content="Third" Grid.Column="1" Margin="10" Grid.Row="1" BorderThickness="5" BorderBrush="DarkGreen"/>
    </Grid>
</Window>
