<Window x:Class="Task8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task8"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="648.897">
    <DockPanel >
        <Button DockPanel.Dock="Top" Content="Top" Height="50" />
        <Button DockPanel.Dock="Bottom" Content="Bottom" Height="50" />
        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
            <Button Width="50" >Left</Button>
            <Button Width="50" >Left</Button>
        </StackPanel>
        <TextBlock Width="200"></TextBlock>
        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Width="100" Margin="0">
            <Button Width="50">Right</Button>
            <Button Content="Right" Width="50"/>
        </StackPanel>

    </DockPanel>
</Window>
