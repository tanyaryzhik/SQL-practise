<Window x:Class="Task8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task8"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <DockPanel LastChildFill="False">
        <Button DockPanel.Dock="Top" Content="Top" Height="50" />
        <Button DockPanel.Dock="Bottom" Content="Bottom" Height="50" />
        <Button Width="50" DockPanel.Dock="Left" >Left</Button>
        <Button Width="50" DockPanel.Dock="Left">Left</Button>
        <Button Width="50" DockPanel.Dock="Right">Right</Button>
        <Button Width="50" DockPanel.Dock="Right">Right</Button>
    </DockPanel>
</Window>
