<Window x:Class="Task6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="EmployeeTemplate">
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding}" BorderThickness="2" Width="400" MaxHeight="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" FontSize="20" Width="20" Binding="{Binding Path=Id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Name" FontSize="20" Width="120" Binding="{Binding Path=Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Department" FontSize="20" Width="250" Binding="{Binding Path=Department}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        
    </Grid>
</Window>
